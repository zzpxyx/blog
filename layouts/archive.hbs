<!doctype html>
<html>

<head>
    {{> meta}}
    <meta name="description" content="A blog of technical memos for weird issues">
    <title>{{pageTitle}}</title>
    {{> css}}
</head>

<body>
    {{> header}}
    <article>
        {{#each archive}}
        <h3>{{year}}</h3>
        <ul class="archive">
            {{#each data}}
            <li><time>{{formatDate publishDate}}</time><a href="/{{path}}">{{title}}</a></li>
            {{/each}}
        </ul>
        {{/each}}
    </article>
</body>

</html>
