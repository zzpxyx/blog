<!doctype html>
<html>

<head>
    {{> meta}}
    <meta name="description" content="A blog of technical memos for weird issues">
    <title>{{site.title}}</title>
    {{> css}}
</head>

<body>
    {{> header}}
    {{#each pagination.files}}
    <article>
        <h2><a href="/{{path}}">{{title}}</a></h2>
        <h6>
            Published <time>{{formatDate publishDate}}</time>
            {{#if modifyDate}}
            | Updated <time>{{formatDate modifyDate}}</time>
            {{/if}}
            | <a href="/{{path}}">Read More</a>
        </h6>
        {{&excerpt}}
    </article>
    {{/each}}
    <footer>
        {{#if pagination.previous}}
        <div><a href="/{{shortenPath pagination.previous.path}}" class="float-left">&laquo; Prev Page</a></div>
        {{/if}}
        {{#if pagination.next}}
        <div><a href="/{{shortenPath pagination.next.path}}" class="float-right">Next Page &raquo;</a></div>
        {{/if}}
    </footer>
</body>

</html>
